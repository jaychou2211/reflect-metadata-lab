{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current TS File",
            "runtimeExecutable": "pnpm",
            "runtimeArgs": [
                "exec",
                "ts-node"
            ],
            "args": [
                "${workspaceFolder}/src/index.ts"
            ],
            "cwd": "${workspaceFolder}",
            "protocol": "inspector",
            "sourceMaps": true,
            "internalConsoleOptions": "openOnSessionStart",
            "justMyCode": false
        }
    ]
}
